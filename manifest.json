{
  "manifest_version": 3,
  "name": "Medium to Freedium",
  "version": "1.0",
  "description": "Detects Medium URLs and opens them in Freedium with a click.",
  "permissions": ["tabs", "notifications"],
  "host_permissions": ["https://medium.com/*", "https://*.medium.com/*"],
  "content_scripts": [
    {
      "matches": ["https://medium.com/*", "https://*.medium.com/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "MediumToFreedium@example.com"
    }
  }
}


  